@model IEnumerable<ResturantApplication.Models.Items>

@{
    ViewBag.Title = "ItemsIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<table id="customers" class="table table-striped table-bordered table-hover" style="width: 100%">
    <thead>
        <tr>
            <th>ITEMS NAME </th>
            <th>ITEMS PRICE</th>
            <th>ACTION </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var items in Model)
        {
            var naira = "\u20A6";
            <tr id="@string.Format("{0}-{1}","Item",items.Id)">
                <td>
                    @Html.ActionLink(@items.Names, "Details", "Items", new { id = items.Id }, null)
                </td>


                <td>@items.ItemPrice</td>
                <td>
                    <button onclick="Edit()" class="btn btn-warning" data-ng-controller="btn-link js-edit">  EDIT</button>
                    <button onclick="Delete(@items.Id)" class="btn btn-danger" data-item-id="btn-link js-delete"> DELETE</button>
                </td>

            </tr>
         }

    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#items').DataTable();
        });
        function Delete(Id) {
            alert(Id+ ' <-- Your Id Please Do Code here for delete items');
        }
    </script>
}