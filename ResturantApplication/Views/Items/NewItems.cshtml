@model ResturantApplication.Models.Items
@{
    ViewBag.Title = "New Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Heading</h2>

@using (Html.BeginForm("Save", "Items"))
{
<div class="row">
    <div class="col-md-6 form-group mb-6">
        <div class="formgroup">
            @Html.LabelFor(i=>i.Names) *
            @Html.TextBoxFor(i => i.Names, null, new
       {  
           @id = "MinNumber",
           @class = "form-control",
           tabindex = 1,
           placeholder = "Enter Product Name"
       })
            @Html.ValidationMessageFor(i => i.Names)
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.MinQty)
            @Html.TextBoxFor(i => i.MinQty, new { @class = "form-control", id = "AlertQty", placeholder = "Enter Product Quantity" })
            @Html.ValidationMessageFor(i => i.MinQty)
        </div>
    </div>
    <div class="col-md-6 form-group mb-6">
        <div class="form-group">
            @Html.LabelFor(i => i.ItemPrice)
            @Html.TextBoxFor(i => i.ItemPrice, new { @class = "form-control", id = "Items price", placeholder = "Enter Product Price" })
            @Html.ValidationMessageFor(i => i.ItemPrice)
        </div>
        <div class="formgroup">
            <label class="switch pr-5 switch-primary mr-3">
                <span>Status</span>
                <input id="IsActive" data-id="IsActive"
                       @(Model.IsActive || !(Model.Id > 0) ? Html.Raw("checked=\"checked\"") : Html.Raw(""))
                       type="checkbox" tabindex="6">
                <span class="slider"></span>
            </label>
        </div>
    </div>




    @Html.HiddenFor(i => i.Id)

    <div class="card-footer">

        <button type="submit" class="btn btn-primary"> Add To List</button>
    </div>

</div>
    
}